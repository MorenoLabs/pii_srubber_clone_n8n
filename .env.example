# PII Scrubber Configuration

# Server Settings
HOST=0.0.0.0
PORT=8000

# Masking Settings
MASKING_MODE=redact
MASKING_CHAR=â–ˆ
MAX_TEXT_SIZE=50000

# Language Settings
SUPPORTED_LANGUAGES=en,de
DEFAULT_LANGUAGE=en
AUTO_DETECT_LANGUAGE=true

# Text Preprocessing Settings
ENABLE_PREPROCESSING=true

# Logging
ENABLE_LOGGING=false

# Basic Authentication (disabled by default)
